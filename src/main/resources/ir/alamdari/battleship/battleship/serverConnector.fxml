<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="427.0" prefWidth="412.0" spacing="16.0" xmlns="http://javafx.com/javafx/19"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.alamdari.battleship.battleship.ServerConnectorController">
   <padding>
      <Insets top="14.0" />
   </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Server Connector">
      <font>
         <Font name="System Italic" size="32.0" />
      </font>
   </Text>
   <HBox fillHeight="false" spacing="32.0" VBox.vgrow="NEVER">
      <padding>
         <Insets bottom="8.0" top="8.0" />
      </padding>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="IP address"
          textAlignment="RIGHT" wrappingWidth="80.0">
         <font>
            <Font size="16.0" />
         </font>
      </Text>
      <TextField fx:id="textIp" prefHeight="25.0" prefWidth="175.0" />
   </HBox>
   <HBox spacing="32.0">
      <padding>
         <Insets bottom="8.0" top="8.0" />
      </padding>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Port" textAlignment="RIGHT" wrappingWidth="80.0">
         <font>
            <Font size="16.0" />
         </font>
      </Text>
      <TextField fx:id="textPort" prefHeight="25.0" prefWidth="175.0" />
   </HBox>
   <Button fx:id="btnCheck" mnemonicParsing="false" text="Check connection">
      <font>
         <Font size="16.0" />
      </font>
   </Button>
   <Text fx:id="textStatus" strokeType="OUTSIDE" strokeWidth="0.0" text="Server not found" textAlignment="CENTER"
       wrappingWidth="291.42236328125">
      <font>
         <Font size="23.0" />
      </font>
   </Text>
   <Button fx:id="btnGo" mnemonicParsing="false" text="Let's Go">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
</VBox>
